node {
    stage('SCM Checkout'){
	    git branch: 'main', credentialsId: 'git-credentials', url: 'https://github.com/vikas99341/hello-world.git'
	}
    stage('Maven-Clean'){
	    def mvnHome = tool name: 'maven_home', type: 'maven'
	    def mnvCMD = "${mvnHome}/bin/mvn"
	    sh "${mnvCMD} clean "
	}
    stage('Maven-Compile'){
	    def mvnHome = tool name: 'maven_home', type: 'maven'
	    def mnvCMD = "${mvnHome}/bin/mvn"
	    sh "${mnvCMD} compile "
	}
    stage('Maven-Package'){
	    def mvnHome = tool name: 'maven_home', type: 'maven'
	    def mnvCMD = "${mvnHome}/bin/mvn"
	    sh "${mnvCMD} package "
	}	
}
